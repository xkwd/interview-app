.container-fluid.px-0
  .img-container{style: "background-image: url('#{@interview.cover_url}');"}
  .container
    .row
      .col-lg-7.offset-lg-2
        .card
          .card-body
            %h3.text-justify= @interview.title
            %p= @interview.description
            %h2
              %span.badge.badge-warning= @interview.country.name
            - @interview.answers.each do |answer|
              .section
                %div.float-left
                  %h3= answer.section.name
                  = image_tag "#{answer.image_url(:thumb)}", class: "section-img"
                %div
                  %p.section-text.text-justify=  answer.content
        .comments
          = render partial: "comments/comments", locals: { commentable: @interview }
        .comment-form
          = render partial: "comments/form", locals: { commentable: @interview }
