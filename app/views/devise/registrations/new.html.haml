.container.mt-4
  .row
    .col-md-6.offset-md-3
      .card
        .card-header
          %h2.card-title.text-center Sign up
        .card-body
          = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
            = devise_error_messages!
            .form-group
              = f.label :email
              %br/
              = f.email_field :email, autofocus: true, placeholder: "Enter email", class: "form-control"
            .form-group
              = f.label :password
              - if @minimum_password_length
                %em
                  (#{@minimum_password_length} characters minimum)
              %br/
              = f.password_field :password, autocomplete: "off", placeholder: "Enter your password", class: "form-control"
            .form-group
              = f.label :password_confirmation
              %br/
              = f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm your password",  class: "form-control"
            .row
              .col-sm-6.offset-sm-3
                = f.submit "Sign up", type: "submit", class: "btn btn-info btn-block"
        .card-footer.text-center
          = render "devise/shared/links"
